<div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
  <h2>Update user profile</h2>
  <%= form_for(@user, html: { class: "form-horizontal" }) do |f| %>
    <div class="form-group input-group">
      <%= f.label :username, class: "form-label input-group-addon" %>
      <%= f.text_field :username, required: true, placeholder: "Please enter your user name", class: "form-control" %>
    </div>
    <div class="form-group input-group">
      <%= f.label :given_name, class: "form-label input-group-addon" %>
      <%= f.text_field :given_name, required: true, placeholder: "Please enter your given name", class: "form-control" %>
    </div>
    <div class="form-group input-group">
      <%= f.label :family_name, class: "form-label input-group-addon" %>
      <%= f.text_field :family_name, required: true, placeholder: "Please enter your family name", class: "form-control" %>
    </div>
    <div class="form-group input-group">
      <%= f.label :email, class: "form-label input-group-addon" %>
      <%= f.text_field :email, required: true, readonly: true, class: "form-control" %>
    </div>
    <div class="form-group input-group">
      <%= f.label :address, class: "form-label input-group-addon" %>
      <select name="user[address]" class="form-control">
        <% @suburbs.each do |suburb| %>
          <option value="<%= suburb %>"><%= suburb %></option>
        <% end %>
      </select>
    </div>
    <div class="form-group input-group">
      <%= f.label :phone_number, class: "form-label input-group-addon" %>
      <%= f.text_field :phone_number, required: true, placeholder: "Please enter your phone number", class: "form-control" %>
    </div>
    <!-- TODO refresh image on change -->
    <%= image_tag @user.image.url(:medium), class: "job-view-image" %>
    <div class="form-group input-group">
      <%= f.label :image, class: "form-label input-group-addon"%>
      <%= f.file_field :image, class: "form-control" %>
      <p class="input-group-addon extra">Maximum file size: 2 MB.</p>
    </div>
    <!-- TODO end -->
    <div class="form-group">
      <fieldset class="input-group">
        <legend>Please choose a profession if you wish to be listed as a tradie</legend>
        <label class="radio margin-correct"><%= f.radio_button(:profession, "Builder") %>Builder</label>
        <label class="radio margin-correct"><%= f.radio_button(:profession, "Electrician") %>Electrician</label>
        <label class="radio margin-correct"><%= f.radio_button(:profession, "Gardener") %>Gardener</label>
        <label class="radio margin-correct"><%= f.radio_button(:profession, "Gasfitter") %>Gasfitter</label>
        <label class="radio margin-correct"><%= f.radio_button(:profession, "Glazier") %>Glazier</label>
        <label class="radio margin-correct"><%= f.radio_button(:profession, "Painter") %>Painter</label>
        <label class="radio margin-correct"><%= f.radio_button(:profession, "Plasterer") %>Plasterer</label>
        <label class="radio margin-correct"><%= f.radio_button(:profession, "Plumber") %>Plumber</label>
        <label class="radio margin-correct"><%= f.radio_button(:profession, "Tiler") %>Tiler</label>
        <label class="radio margin-correct"><%= f.radio_button(:profession, "General Handyworker") %>General Handyworker</label>
      </fieldset>
    </div>
    <div class="form-group input-group">
      <%= f.label :description, class: "form-label input-group-addon" %>
      <%= f.text_area :description, required: false, placeholder: "Describe yourself and your skills", class: "form-control" %>
    </div>
    <div class="form-group input-group">
      <%= f.submit(class: "btn btn-danger btn-block") %>
    </div>
  <% end %>
</div>
