<div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
  <h2><%= @user.username %> Profile</h2>
  <%= image_tag @user.image.url(:thumb) %>
  <p class="row">
    <span class="col-xs-5 col-sm-3 col-md-2">Username:</span>
    <span class="col-xs-7 col-sm-9 col-md-10"><%= @user.username %></span>
  </p>
  <% if @user == current_user %>
    <p class="row">
      <span class="col-xs-5 col-sm-3 col-md-2">Givenname:</span>
      <span class="col-xs-7 col-sm-9 col-md-10"><%= @user.given_name %></span>
    </p>
    <p class="row">
      <span class="col-xs-5 col-sm-3 col-md-2">Family name:</span>
      <span class="col-xs-7 col-sm-9 col-md-10"><%= @user.family_name %></span>
    </p>
    <p class="row">
      <span class="col-xs-5 col-sm-3 col-md-2">Email:</span>
      <span class="col-xs-7 col-sm-9 col-md-10"><%=@user.email%></span>
    </p>
    <p class="row">
      <span class="col-xs-5 col-sm-3 col-md-2">Address:</span>
      <span class="col-xs-7 col-sm-9 col-md-10"><%=@user.address %></span>
    </p>
    <p class="row">
      <span class="col-xs-5 col-sm-3 col-md-2">Phone number:</span>
      <span class="col-xs-7 col-sm-9 col-md-10"><%=@user.phone_number%></span>
    </p>
    <% if @user.profession != "customer" %>
      <p class="row">
        <span class="col-xs-5 col-sm-3 col-md-2">Profession:</span>
        <span class="col-xs-7 col-sm-9 col-md-10"><%= @user.profession %></span>
      </p>
      <p class="row">
        <span class="col-xs-5 col-sm-3 col-md-2">Description:</span>
        <span class="col-xs-7 col-sm-9 col-md-10"><%= @user.description %></span>
      </p>

    <% end %>
    <% if @user.id == session[:user_id] %>
      <%=link_to "Edit profile", edit_user_path(@user), class:"btn btn-warning" %>
    <%end%>
  <% end %>
  <% if @user.tenders %>
    <%=link_to "See #{@user.username} tenders", user_tenders_path(@user), class:"btn btn-info" %>
  <% end %>
  <% if @user.jobs %>
    <%=link_to "See #{@user.username} jobs", user_jobs_path(@user), class:"btn btn-info" %>
  <% end %>
    <% if @user.profession != "customer" %>
      <p class="row">
        <span class="col-xs-5 col-sm-3 col-md-2">Comments for this Tradie:</span>
      </p>
      <% @user_comments.each do |comment, commenter| %>
          <p>"<%=comment%>", from user <%=commenter%></p>
      <%end%>
    <%end%>

</div>
